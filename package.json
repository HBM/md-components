  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hbm/react-components.git"
  },
  "author": "Mirco Zeiss <mirco.zeiss@gmail.com>",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "coveralls": "^2.11.12",
    "envify": "^3.4.0",
    "enzyme": "^2.3.0",
    "eslint-plugin-react": "^6.0.0",
    "history": "^1.12.6",
    "istanbul": "^0.4.3",
    "jasmine-core": "^2.3.4",
    "karma": "^1.1.2",
    "karma-browserify": "^5.1.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "mocha": "^3.0.2",
    "node-sass": "^3.6.0",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-router": "^2.6.1",
    "saucelabs": "^1.2.0",
