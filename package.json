{
  "name": "hbm-react-components",
  "version": "3.0.0",
  "description": "HBM React components",
  "main": "index.js",
  "scripts": {
    "test": "make test",
    "selenium": "mocha --timeout 60000 test/e2e/selenium.js",
    "build:examples:all": "npm run build:examples:clear && npm run build:examples:style && npm run build:examples:js",
    "build:examples:clear": "rimraf examples/js/script.min.js examples/css/styles.min.css",
    "build:examples:js": "standard && browserify examples/js/script.js --outfile examples/js/script.min.js --transform [ babelify --presets [ es2015 react stage-0 ] ]",
    "build:examples:style": "node-sass examples/css/styles.scss examples/css/styles.min.css",
    "server:examples": "http-server -p 5000 ./examples",
    "watch:examples:all": "npm run watch:examples:js & npm run watch:examples:style",
    "watch:examples:js": "npm run build:examples:js && watchify examples/js/script.js -o examples/js/script.min.js -d -v --transform [ babelify --presets [ es2015 react stage-0 react-hmre ] ] --plugin browserify-hmr",
    "watch:examples:style": "npm run build:examples:style && npm run build:examples:style -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hbm/react-components.git"
  },
  "author": "Mirco Zeiss <mirco.zeiss@gmail.com>",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.0.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-hmr": "^0.3.1",
    "component-playground": "^1.3.1",
    "coveralls": "^2.11.12",
    "envify": "^3.4.0",
    "enzyme": "^2.3.0",
    "eslint-plugin-react": "^6.0.0",
    "glob": "^7.0.5",
    "history": "^1.12.6",
    "http-server": "^0.9.0",
    "istanbul": "^1.1.0-alpha.1",
    "jasmine-core": "^2.3.4",
    "mocha": "^3.0.2",
    "node-sass": "^3.6.0",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-router": "^2.6.1",
    "react-transform-hmr": "^1.0.4",
    "rimraf": "^2.5.4",
    "saucelabs": "^1.2.0",
    "selenium-webdriver": "^3.0.0-beta-2",
    "st": "^1.2.0",
    "standard": "^7.0.1",
    "tarball-extract": "0.0.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "attr-accept": "^1.0.3",
    "classnames": "^2.2.4",
    "history": "^1.17.0",
    "object-assign": "^4.0.1",
    "react-motion": "^0.4.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "karma.conf.js",
      "components/icon/*.js"
    ]
  }
}
